<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_eeeeee">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout_user"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/gray_eeeeee">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleGravity="start|bottom"
                app:expandedTitleMarginBottom="10dp"
                app:expandedTitleMarginStart="10dp"
                app:expandedTitleMarginTop="10dp"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_user_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shape_gradient_angle_270_color_tran_gray"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.3" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tool_bar_user"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:theme="?attr/actionBarTheme"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/menu_user_setting"
                    app:title="@string/user_title" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_settings_24_white"
            app:layout_anchor="@id/app_bar_layout_user"
            app:layout_anchorGravity="bottom|end" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/item_user"
                    layout="@layout/item_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

                <include
                    android:id="@+id/item_user_feature"
                    layout="@layout/item_user_feature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

                <include
                    android:id="@+id/item_user_info"
                    layout="@layout/item_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

                <include
                    android:id="@+id/item_user_learn"
                    layout="@layout/item_user_learn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

                <include
                    android:id="@+id/item_user_setting"
                    layout="@layout/item_user_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

                <include
                    android:id="@+id/item_user_share"
                    layout="@layout/item_user_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

                <include
                    android:id="@+id/item_user_driver"
                    layout="@layout/item_user_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

                <include
                    android:id="@+id/item_user_about"
                    layout="@layout/item_user_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_sign_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/item_sign_out"
                            layout="@layout/item_user_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            bind:icon="@{@drawable/ic_baseline_exit_to_app_24_red}"
                            bind:title='@{@string/sign_out}' />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>