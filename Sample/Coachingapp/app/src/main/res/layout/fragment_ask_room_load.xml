        <include layout="@layout/item_ask_self_shimmer" />

        <include layout="@layout/item_ask_other_shimmer" />

        <include layout="@layout/item_ask_other_shimmer" />

        <include layout="@layout/item_ask_self_shimmer" />

        <include layout="@layout/item_ask_other_shimmer" />

        <include layout="@layout/item_ask_self_shimmer" />

        <include layout="@layout/item_ask_self_shimmer" />

        <include layout="@layout/item_ask_other_shimmer" />

        <include layout="@layout/item_ask_self_shimmer" />

        <include layout="@layout/item_ask_other_shimmer" />

        <include layout="@layout/item_ask_other_shimmer" />

        <include layout="@layout/item_ask_self_shimmer" />

        <include layout="@layout/item_ask_self_shimmer" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.facebook.shimmer.ShimmerFrameLayout>
