<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <View
            android:id="@+id/riv_avatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_auth"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <View
            android:id="@+id/tv_gender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/riv_avatar"
            app:layout_constraintEnd_toEndOf="@id/riv_avatar" />

        <View
            android:id="@+id/iv_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@id/tv_id"
            app:layout_constraintEnd_toStartOf="@id/iv_edit"
            app:layout_constraintStart_toEndOf="@id/riv_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <View
            android:id="@+id/tv_school"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text='@{String.format("%s：%s", @string/school,userInfo.studentInfo.school)}'
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_grade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_id"
            bind:isVisible="@{userInfo.studentInfo!=null}" />

        <View
            android:id="@+id/tv_grade"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text='@{String.format("%s：%s",@string/grade, String.valueOf(userInfo.studentInfo.grade.text))}'
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_auth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_school"
            app:layout_constraintTop_toBottomOf="@+id/tv_school"
            bind:isVisible="@{userInfo.studentInfo!=null}" />

        <View
            android:id="@+id/tv_auth"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text='@{String.format("%s：%s",@string/authority, (userInfo.auth==Authority.STUDENT)?@string/student:(userInfo.auth==Authority.TEACHER)?@string/teacher: @string/unknown)}'
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_grade"
            app:layout_constraintTop_toBottomOf="@+id/tv_grade" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
