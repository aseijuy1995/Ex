<resources>
    <!-- Base application theme. -->
    <style name="Theme.Coachingapp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_a4d8f1</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>>
        <item name="colorPrimaryVariant">@color/blue_b5e1f3</item>
        <item name="colorOnPrimary">@color/blue_b5e1f3</item>>
        <!-- Second -->
        <item name="colorSecondary">@color/blue_a4d8f1</item>
        <item name="colorSecondaryVariant">@color/blue_b5e1f3</item>
        <item name="colorOnSecondary">@color/blue_b5e1f3</item>
    </style>

    <style name="LoadingDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowElevation">5dp</item>
        <item name="dialogCornerRadius">5dp</item>
        <item name="android:background">@color/blue_293c4f</item>
    </style>

    <style name="BottomSheetTheme.TopRadius15" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle.TopRadius15</item>
    </style>

    <style name="BottomSheetStyle.TopRadius15" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_solid_white_corners_radius_top_lt_rt_15</item>
    </style>

</resources>