<resources>
    <!-- Base application theme. -->
    <style name="Theme.Coachingapp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_025196</item>
        <item name="colorPrimaryVariant">@color/blue_4d85b5</item>

        <item name="colorSecondary">@color/yellow_fdb338</item>
        <item name="colorSecondaryVariant">@color/yellow_feca73</item>

        <item name="colorBackgroundFloating">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red_eb4537</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/white</item>


        <item name="colorPrimaryDark">?attr/colorPrimary</item>
    </style>

    <style name="LoadingDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowElevation">5dp</item>
        <item name="dialogCornerRadius">5dp</item>
        <item name="android:background">@color/blue_293c4f</item>
    </style>

    <style name="BottomSheetTheme.TopRadius15" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle.TopRadius15</item>
    </style>

    <style name="BottomSheetStyle.TopRadius15" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_solid_white_corners_radius_top_lt_rt_15</item>
    </style>

</resources>