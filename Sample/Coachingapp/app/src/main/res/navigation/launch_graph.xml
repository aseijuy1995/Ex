<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_start">
    <!--        app:startDestination="@id/fragment_home">-->

    <action
        android:id="@+id/action_to_fragment_home"
        app:destination="@id/fragment_home"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

    <action
        android:id="@+id/action_to_fragment_chat_room"
        app:destination="@id/fragment_chat_room"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right">

        <argument
            android:name="chat"
            app:argType="tw.north27.coachingapp.model.result.ChatInfo"
            app:nullable="false" />

    </action>

    <!--  Page  -->
    <!--    -->
    <!--    -->
    <!--    -->
    <dialog
        android:id="@+id/fragment_loading_dialog"
        android:name="tw.north27.coachingapp.ui2.fragment.global.LoadingDialogFragment"
        android:label="fragment_loading_dialog"
        tools:layout="@layout/fragment_loading_dialog" />

    <!--  Global Action  -->
    <action
        android:id="@+id/action_to_fragment_sign_in"
        app:destination="@id/fragment_sign_in"
        app:popUpTo="@id/fragment_start"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_to_fragment_sign_out_dialog"
        app:destination="@id/fragment_sign_out_dialog" />

    <!--  Fragment Page  -->
    <fragment
        android:id="@+id/fragment_start"
        android:name="tw.north27.coachingapp.ui.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start">

        <action
            android:id="@+id/action_fragment_start_to_fragment_maintain_dialog"
            app:destination="@id/fragment_maintain_dialog" />

        <action
            android:id="@+id/action_fragment_start_to_fragment_update_dialog"
            app:destination="@id/fragment_update_dialog" />

    </fragment>

    <dialog
        android:id="@+id/fragment_maintain_dialog"
        android:name="tw.north27.coachingapp.ui.MaintainDialogFragment"
        android:label="fragment_maintain_dialog"
        tools:layout="@layout/fragment_maintain_dialog" />

    <dialog
        android:id="@+id/fragment_update_dialog"
        android:name="tw.north27.coachingapp.ui.UpdateDialogFragment"
        android:label="fragment_update_dialog"
        tools:layout="@layout/fragment_update_dialog" />

    <fragment
        android:id="@+id/fragment_sign_in"
        android:name="tw.north27.coachingapp.ui.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />

    <dialog
        android:id="@+id/fragment_sign_out_dialog"
        android:name="tw.north27.coachingapp.ui.SignOutDialogFragment"
        android:label="fragment_sign_out_dialog"
        tools:layout="@layout/fragment_sign_out_dialog" />

    <!--    -->
    <!--    -->
    <!--    -->
    <!--    -->
    <!--    -->

    <!---->
    <!--    -->


    <fragment
        android:id="@+id/fragment_home"
        android:name="tw.north27.coachingapp.ui2.fragment.main.MainHomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_main_home" />

    <fragment
        android:id="@+id/fragment_study_room"
        android:name="tw.north27.coachingapp.ui2.fragment.main.StudyRoomFragment"
        android:label="fragment_study_room"
        tools:layout="@layout/fragment_study_room" />

    <fragment
        android:id="@+id/fragment_personal_center"
        android:name="tw.north27.coachingapp.ui2.fragment.main.PersonalCenterFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_personal_center" />

    <!-- Chat -->
    <fragment
        android:id="@+id/fragment_chat"
        android:name="tw.north27.coachingapp.ui2.fragment.main.QuestionAreaFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_question_area" />

    <fragment
        android:id="@+id/fragment_chat_list"
        android:name="tw.north27.coachingapp.ui2.fragment.main.ChatListFragment"
        android:label="fragment_chat_list"
        tools:layout="@layout/fragment_chat_list" />

    <fragment
        android:id="@+id/fragment_chat_room"
        android:name="tw.north27.coachingapp.ui2.fragment.main.ChatRoomFragment"
        android:label="fragment_chat_room"
        tools:layout="@layout/fragment_chat_room">

        <action
            android:id="@+id/action_fragment_chat_room_to_fragment_chat_room_add_dialog"
            app:destination="@id/fragment_chat_room_add_dialog" />

        <action
            android:id="@+id/action_fragment_chat_room_to_fragment_chat_room_media_dialog"
            app:destination="@id/fragment_chat_room_media_dialog">

            <argument
                android:name="mimeType"
                app:argType="tw.north27.coachingapp.media.mediaStore.MimeType"
                app:nullable="false" />
        </action>

        <action
            android:id="@+id/action_fragment_chat_room_to_fragment_media_photo"
            app:destination="@id/fragment_media_photo"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">

            <argument
                android:name="url"
                app:argType="string"
                app:nullable="false" />

        </action>

    </fragment>

    <dialog
        android:id="@+id/fragment_chat_room_add_dialog"
        android:name="tw.north27.coachingapp.ui2.fragment.main.ChatRoomAddDialogFragment"
        android:label="fragment_chat_room_add_dialog"
        tools:layout="@layout/fragment_chat_room_add_dialog" />

    <dialog
        android:id="@+id/fragment_chat_room_media_dialog"
        android:name="tw.north27.coachingapp.ui2.fragment.main.ChatRoomMediaDialogFragment"
        android:label="fragment_chat_room_media_dialog"
        tools:layout="@layout/fragment_chat_room_media_dialog">

        <argument
            android:name="mimeType"
            app:argType="tw.north27.coachingapp.media.mediaStore.MimeType"
            app:nullable="false" />

    </dialog>

    <fragment
        android:id="@+id/fragment_media_photo"
        android:name="tw.north27.coachingapp.ui2.fragment.main.MediaPhotoFragment"
        android:label="fragment_media_photo"
        tools:layout="@layout/fragment_media_photo">

        <argument
            android:name="url"
            app:argType="string"
            app:nullable="false" />

    </fragment>

    <!-- Notify -->
    <fragment
        android:id="@+id/fragment_notice_center"
        android:name="tw.north27.coachingapp.ui2.fragment.main.NoticeCenterFragment"
        android:label="fragment_notify"
        tools:layout="@layout/fragment_notice_center">

        <action
            android:id="@+id/action_fragment_notify_to_fragment_notify_more_dialog"
            app:destination="@id/fragment_notify_more_dialog">

            <argument
                android:name="notifyInfo"
                app:argType="tw.north27.coachingapp.model.result.NotifyInfo"
                app:nullable="false" />
        </action>

        <argument
            android:name="notifyInfo"
            app:argType="tw.north27.coachingapp.model.result.NotifyInfo"
            app:nullable="false" />

    </fragment>

    <dialog
        android:id="@+id/fragment_notify_more_dialog"
        android:name="tw.north27.coachingapp.ui2.fragment.item.NotifyMoreDialogFragment"
        android:label="fragment_notify_more_dialog"
        tools:layout="@layout/fragment_notify_more_dialog" />


</navigation>