<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_chat_room">

    <fragment
        android:id="@+id/fragment_chat_room"
        android:name="edu.yujie.socketex.ui.ChatRoomFragment"
        android:label="fragment_chat_room"
        tools:layout="@layout/fragment_chat_room">

        <action
            android:id="@+id/action_fragment_chat_room_to_fragment_add_dialog"
            app:destination="@id/fragment_add_dialog" />

        <action
            android:id="@+id/action_fragment_chat_room_to_fragment_mic_bottom_sheet_dialog"
            app:destination="@id/fragment_mic_bottom_sheet_dialog" />

        <action
            android:id="@+id/action_fragment_chat_room_to_fragment_media_dialog"
            app:destination="@id/fragment_media_dialog">
            <argument
                android:name="mimeType"
                android:defaultValue="ALL"
                app:argType=".bean.MimeType" />
        </action>

    </fragment>

    <dialog
        android:id="@+id/fragment_add_dialog"
        android:name="edu.yujie.socketex.ui.AddDialogFragment"
        android:label="fragment_add_dialog"
        tools:layout="@layout/fragment_add_dialog" />


    <dialog
        android:id="@+id/fragment_media_dialog"
        android:name="edu.yujie.socketex.ui.media.MediaDialogFragment"
        android:label="fragment_media_dialog"
        tools:layout="@layout/fragment_media_dialog">

        <action
            android:id="@+id/action_fragment_media_dialog_to_fragment_media_detail"
            app:destination="@id/fragment_media_detail">

            <argument
                android:name="media"
                app:argType=".bean.Media" />

        </action>
    </dialog>

    <dialog
        android:id="@+id/fragment_mic_bottom_sheet_dialog"
        android:name="edu.yujie.socketex.ui.MicBottomSheetDialogFragment"
        android:label="fragment_mic_bottom_sheet_dialog"
        tools:layout="@layout/fragment_mic_bottom_sheet_dialog" />


    <fragment
        android:id="@+id/fragment_media_detail"
        android:name="edu.yujie.socketex.ui.MediaPreviewFragment"
        android:label="fragment_media_detail"
        tools:layout="@layout/fragment_media_preview" />

</navigation>